

# Zsh/Bash Completion
source /usr/local/Cellar/goto/1.2.3/etc/bash_completion.d/goto.sh
source /usr/local/share/zsh-autosuggestions/zsh-autosuggestions.zsh
source /usr/local/etc/profile.d/z.sh

# New Curl
PATH="/usr/local/opt/curl/bin:$PATH"

# Scripts path
export PATH="$PATH:$HOME/source/scripts";
export PATH="$PATH:$HOME/bin";

# Vscode path
export PATH="$PATH:/Applications/Visual Studio Code.app/Contents/Resources/app/bin"

# Bin/linux utils paths
export PATH="/usr/local/opt/binutils/bin:$PATH"
export PATH="/usr/local/opt/util-linux/bin:$PATH"
export PATH="/usr/local/opt/util-linux/sbin:$PATH"

# Set Github API token for Homebrew
# set in ~/.zsecrets

# Go paths
export GOPATH="$HOME/.go"
export GOBIN="$HOME/.go/bin"

# Ruby paths
export PATH="/usr/local/opt/ruby/bin:$PATH"
export PKG_CONFIG_PATH="/usr/local/opt/ruby/lib/pkgconfig"

# Java paths
export CLASSPATH="$CLASSPATH:/Library/Java/Extensions/TwsApi.jar"

# Rust paths
export PATH="$PATH:$HOME/.cargo/bin"

export FZF_COMPLETION_TRIGGER='~~'

# Options to fzf command
export FZF_COMPLETION_OPTS='+c -x'

# Use fd (https://github.com/sharkdp/fd) instead of the default find
# command for listing path candidates.
# - The first argument to the function ($1) is the base path to start traversal
# - See the source code (completion.{bash,zsh}) for the details.
_fzf_compgen_path() {
  fd --hidden --follow --exclude ".git" . "$1"
}

# Use fd to generate the list for directory completion
_fzf_compgen_dir() {
  fd --type d --hidden --follow --exclude ".git" . "$1"
}

